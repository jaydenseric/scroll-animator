{
  "name": "scroll-animator",
  "version": "3.0.0",
  "description": "Smart, lightweight functions to animate browser scroll.",
  "license": "MIT",
  "author": {
    "name": "Jayden Seric",
    "email": "me@jaydenseric.com",
    "url": "https://jaydenseric.com"
  },
  "repository": "github:jaydenseric/scroll-animator",
  "homepage": "https://github.com/jaydenseric/scroll-animator#readme",
  "bugs": "https://github.com/jaydenseric/scroll-animator/issues",
  "funding": "https://github.com/sponsors/jaydenseric",
  "keywords": [
    "scroll",
    "scrolling",
    "animator",
    "animate",
    "esm",
    "mjs"
  ],
  "files": [
    "lib"
  ],
  "main": "lib",
  "module": "lib/index.mjs",
  "sideEffects": false,
  "engines": {
    "node": ">=10"
  },
  "browserslist": "Node >= 10, > 0.5%, not OperaMini all, not dead",
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@size-limit/preset-small-lib": "^3.0.0",
    "babel-eslint": "^10.0.3",
    "babel-plugin-transform-require-extensions": "^2.0.0",
    "eslint": "^6.8.0",
    "eslint-config-env": "^13.0.3",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsdoc": "^21.0.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jsdoc-md": "^5.0.1",
    "prettier": "^1.19.1"
  },
  "scripts": {
    "prepare": "npm run prepare:clean && npm run prepare:mjs && npm run prepare:js && npm run prepare:jsdoc && npm run prepare:prettier",
    "prepare:clean": "rm -rf lib",
    "prepare:mjs": "BABEL_ESM=1 babel src -d lib --keep-file-extension",
    "prepare:js": "babel src -d lib",
    "prepare:jsdoc": "jsdoc-md",
    "prepare:prettier": "prettier 'lib/**/*.{mjs,js}' readme.md --write",
    "test": "npm run test:eslint && npm run test:prettier && npm run test:size",
    "test:eslint": "eslint . --ext mjs,js",
    "test:prettier": "prettier '**/*.{json,yml,md}' -l",
    "test:size": "size-limit",
    "prepublishOnly": "npm run prepare && npm test"
  }
}
